{
    "name": "clarkwinkelmann/flarum-ext-vote-with-money",
    "description": "Put money pledges on poll options.",
    "keywords": [
        "flarum",
        "money",
        "polls",
        "vote"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "require": {
        "flarum/core": "^1.2",
        "antoinefr/flarum-ext-money": "*",
        "fof/polls": "*"
    },
    "authors": [
        {
            "name": "Clark Winkelmann",
            "homepage": "https://clarkwinkelmann.com/",
            "email": "clark.winkelmann@gmail.com",
            "role": "Developer"
        }
    ],
    "support": {
        "source": "https://github.com/clarkwinkelmann/flarum-ext-vote-with-money"
    },
    "autoload": {
        "psr-4": {
            "ClarkWinkelmann\\VoteWithMoney\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Vote with Money",
            "category": "feature",
            "icon": {
                "name": "fas fa-money-bill",
                "backgroundColor": "#684ba6",
                "color": "#fff"
            }
        }
    }
}
